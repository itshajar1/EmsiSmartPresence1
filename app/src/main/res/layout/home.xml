<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home">

    <!-- ScrollView for main content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingBottom="20dp">

            <!-- Profile Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bonjour,"
                    android:textColor="#6B7280"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Bonne journÃ©e!"
                    android:textColor="#1F2937"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/card_background"
                android:elevation="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="20dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:background="@drawable/circle_background"
                        android:contentDescription="Profile Image"
                        android:onClick="changeProfilePhoto"
                        android:padding="4dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/human" />

                    <ImageButton
                        android:id="@+id/btn_add_photo"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignEnd="@id/profile_image"
                        android:layout_alignBottom="@id/profile_image"
                        android:layout_marginEnd="-8dp"
                        android:layout_marginBottom="-8dp"
                        android:background="@drawable/circle_blue"
                        android:elevation="4dp"
                        android:src="@drawable/ic_add_photo"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nom PrÃ©nom"
                            android:textColor="#333"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/notification_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="8dp"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:contentDescription="Notifications"
                            android:focusable="true"
                            android:padding="4dp"
                            android:src="@android:drawable/ic_popup_reminder"
                            app:tint="#DC2626"
                            tools:ignore="TouchTargetSizeCheck" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tableau de bord"
                        android:textColor="#666"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Notifications Popup -->
            <LinearLayout
                android:id="@+id/notifications_popup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:elevation="8dp"
                android:padding="16dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”” Notifications importantes"
                    android:textColor="#DC2626"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:id="@+id/notifications_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!-- Notifications will be added dynamically here -->
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AccÃ¨s rapide"
                android:textColor="#1F2937"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="4dp" />

            <!-- Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Map -->
                <LinearLayout
                    android:id="@+id/map"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/button_background"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="openMaps"
                    android:padding="16dp"
                    android:foreground="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/local"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sites de l'Ã‰cole"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#333" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Localiser les campus"
                        android:textAlignment="center"
                        android:textColor="#6B7280"
                        android:textSize="10sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Documents -->
                <LinearLayout
                    android:id="@+id/doc"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/button_background"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="openDocuments"
                    android:padding="16dp"
                    android:foreground="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/doc"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Documents"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#333" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fichiers et ressources"
                        android:textAlignment="center"
                        android:textColor="#6B7280"
                        android:textSize="10sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Timetable -->
                <LinearLayout
                    android:id="@+id/time"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/button_background"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="openTimetable"
                    android:padding="16dp"
                    android:foreground="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/cale"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Emploi du Temps"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#333" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Planning des cours"
                        android:textAlignment="center"
                        android:textColor="#6B7280"
                        android:textSize="10sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Rattrapages -->
                <LinearLayout
                    android:id="@+id/ratt"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/button_background"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="openRattrapages"
                    android:padding="16dp"
                    android:foreground="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/time"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rattrapages"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#333" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sessions de rattrapage"
                        android:textAlignment="center"
                        android:textColor="#6B7280"
                        android:textSize="10sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Absences -->
            <LinearLayout
                android:id="@+id/abs"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/button_background"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="openAbsences"
                android:layout_marginBottom="24dp"
                android:foreground="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/check"
                    android:padding="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gestion des Absences"
                        android:textColor="#1F2937"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Consultez et justifiez vos absences"
                        android:textColor="#6B7280"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Recent Activity Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ActivitÃ© rÃ©cente"
                android:textColor="#1F2937"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_background"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="100dp"
                android:elevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/circle"
                        android:backgroundTint="#1976D2" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nouveau document disponible"
                            android:textColor="#1F2937"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cours de MathÃ©matiques - Chapitre 5"
                            android:textColor="#6B7280"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Il y a 2h"
                        android:textColor="#9CA3AF"
                        android:textSize="11sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F3F4F6"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/circle"
                        android:backgroundTint="#00ACC1" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Emploi du temps mis Ã  jour"
                            android:textColor="#1F2937"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Modifications pour la semaine prochaine"
                            android:textColor="#6B7280"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hier"
                        android:textColor="#9CA3AF"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Fixed buttons container -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:gravity="end">

        <!-- Settings button (top) -->
        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_settings"
            android:background="@drawable/card_background"
            android:contentDescription="ParamÃ¨tres"
            android:elevation="8dp"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <!-- Chatbot button (middle) -->
        <ImageButton
            android:id="@+id/btnChatbot"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/chatbot"
            android:background="@drawable/card_background"
            android:contentDescription="Chatbot"
            android:elevation="8dp"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_marginBottom="8dp" />

        <!-- Sign-out button (bottom) -->
        <ImageButton
            android:id="@+id/btnSignOut"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_logout"
            android:background="@drawable/card_background"
            android:contentDescription="DÃ©connexion"
            android:elevation="8dp"
            android:padding="12dp" />
    </LinearLayout>
</FrameLayout>